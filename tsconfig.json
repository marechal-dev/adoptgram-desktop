{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "react-jsx",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "isolatedModules": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@Main": [
        "./src/main/*"
      ],
      "@Preload": [
        "./src/preload/*"
      ],
      "@Renderer": [
        "./src/renderer/*"
      ]
    },
  },
  "include": [
    "src",
    "src/preload/index.d.ts",
    "electron.vite.config.*"
  ],
  "exclude": [
    "node_modules"
  ]
}
